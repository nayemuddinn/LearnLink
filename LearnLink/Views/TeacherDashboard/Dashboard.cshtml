@model LearnLink.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Dashboard - LearnLink</title>
    <link href="@Url.Content("/Content/dashboard.css")" rel="stylesheet" />
</head>
<body>
    <div class="responsive-wrapper">
        <div class="app">
            <div class="app-header">
                <div class="logo">
                    <div class="logo-icon">
                        <ion-icon name="school-outline"></ion-icon>
                    </div>
                    <div class="logo-title">
                        <span>LearnLink</span>
                        <span>@HttpContext.Current.Session["UserRole"]</span>
                    </div>
                </div>
                <div class="app-header-navigation">
                    <!-- Add any additional navigation items here if needed -->
                </div>


                <div class="app-header-actions">
                    <h3>Dashboard</h3>
                    <div class="app-header-actions-buttons">
                        <ion-icon size="large" name="person-circle"></ion-icon>
                        <h3>@HttpContext.Current.Session["UserName"]</h3>
                    </div>
                </div>
                <div class="app-header-mobile">
                    <h3>Dashboard</h3>
                    <ion-icon size="large" name="person-circle"></ion-icon>
                    <h3>@HttpContext.Current.Session["UserName"]</h3>
                </div>
            </div>

            <div class="app-body">
                @{
                    if (Session["UserRole"].Equals("Student"))
                    {
                        <div class="app-body-navigation">
                            <nav class="navigation">
                                <a href="@Url.Action("AllCourse", "AllCourse")">
                                    <i class="icon ion-md-book"></i>
                                    <span>All Courses</span>
                                </a>
                                <a href="@Url.Action("ViewEnrolledCourses", "StudentEnrolledCourses")">
                                    <i class="icon ion-md-person-add"></i>
                                    <span>Enrolled Courses</span>
                                </a>
                                <a href="@Url.Action("Assessment", "Assessment")">
                                    <i class="icon ion-md-checkmark-circle"></i>
                                    <span>Assessments</span>
                                </a>
                                
                                <a href="@Url.Action("editStudentProfile", "editStudentProfile")">
                                    <i class="icon ion-md-person"></i>
                                    <span>Edit Profile</span>
                                </a>
                                

                                <a href="@Url.Action("login", "Login")">
                                    <i class="icon ion-md-exit"></i>
                                    <span>Log Out</span>
                                </a>
                            </nav>
                        </div>


                        <div class="app-body-content">
                            <div class="tiles">
                                <div class="tile">
                                    <div class="tile-header">
                                        <i class="icon ion-md-book"></i>
                                        <h3>
                                            <span>My Courses</span>
                                            <span>Overview and actions</span>
                                        </h3>
                                    </div>
                                    <a href="@Url.Action("AllCourse", "AllCourse")">
                                        <span>Go to Courses</span>
                                        <button class="icon-button">
                                            <i class="icon ion-md-arrow-forward"></i>
                                        </button>
                                    </a>
                                </div>

                                <div class="tile">
                                    <div class="tile-header">
                                        <i class="icon ion-md-person-add"></i>
                                        <h3>
                                            <span>Enrolled Courses</span>
                                            <span>See Enrolled courses</span>
                                        </h3>
                                    </div>
                                    <a href="@Url.Action("ViewEnrolledCourses", "StudentEnrolledCourses")">
                                        <span>See Your Courses</span>
                                        <button class="icon-button">
                                            <i class="icon ion-md-arrow-forward"></i>
                                        </button>
                                    </a>
                                </div>
                                <div class="tile">
                                    <div class="tile-header">
                                        <i class="icon ion-md-checkmark-circle"></i>
                                        <h3>
                                            <span>Quiz</span>
                                            <span>Take Assessments</span>
                                        </h3>
                                    </div>
                                    <a href="@Url.Action("giveAssessments", "giveAssessments")">
                                        <span>Assess Yourself</span>
                                        <button class="icon-button">
                                            <i class="icon ion-md-arrow-forward"></i>
                                        </button>
                                    </a>
                                </div>
                                
                                <div class="tile">
                                    <div class="tile-header">
                                        <i class="icon ion-md-person"></i>
                                        <h3>
                                            <span>Edit Profile</span>
                                            <span>Update your information</span>
                                        </h3>
                                    </div>
                                    <a href="@Url.Action("editStudentProfile", "editStudentProfile")">
                                        <span>Edit Now</span>
                                        <button class="icon-button">
                                            <i class="icon ion-md-arrow-forward"></i>
                                        </button>
                                    </a>
                                </div>
                            </div>
                        </div>

                    }
                    else
                    {
                        <div class="app-body-navigation">
                            <nav class="navigation">
                                <a href="@Url.Action("ManageCourse", "ManageCourse")">
                                    <i class="icon ion-md-book"></i>
                                    <span>Manage Courses</span>
                                </a>
                                <a href="@Url.Action("createCourse", "createCourse")">
                                    <i class="icon ion-md-add-circle"></i>
                                    <span>Create Courses</span>
                                </a>
                                <a href="@Url.Action("courseMaterials", "courseMaterials")">
                                    <i class="icon ion-md-add-circle"></i>
                                    <span>CourseMaterials</span>
                                </a>
                                <a href="@Url.Action("enrollStudents", "enrollStudents")">
                                    <i class="icon ion-md-person-add"></i>
                                    <span>Enroll Students</span>
                                </a>
                                <a href="@Url.Action("Assessment", "Assessment")">
                                    <i class="icon ion-md-checkmark-circle"></i>
                                    <span>Assessments</span>
                                </a>
                                
                                <a href="@Url.Action("editteacherProfile", "editteacherProfile")">
                                    <i class="icon ion-md-person"></i>
                                    <span>Edit Profile</span>
                                </a>
                                <a href="@Url.Action("login", "Login")">
                                    <i class="icon ion-md-exit"></i>
                                    <span>Log Out</span>
                                </a>
                            </nav>
                        </div>
                        <div class="app-body-content">
                            <div class="tiles">
                                <div class="tile">
                                    <div class="tile-header">
                                        <i class="icon ion-md-book"></i>
                                        <h3>
                                            <span>Manage Courses</span>
                                            <span>Overview and actions</span>
                                        </h3>
                                    </div>
                                    <a href="@Url.Action("ManageCourse", "ManageCourse")">
                                        <span>Go to Courses</span>
                                        <button class="icon-button">
                                            <i class="icon ion-md-arrow-forward"></i>
                                        </button>
                                    </a>
                                </div>
                                <div class="tile">
                                    <div class="tile-header">
                                        <i class="icon ion-md-add-circle"></i>
                                        <h3>
                                            <span>Create Courses</span>
                                            <span>Start a new course</span>
                                        </h3>
                                    </div>
                                    <a href="@Url.Action("createCourse", "createCourse")">
                                        <span>Create Now</span>
                                        <button class="icon-button">
                                            <i class="icon ion-md-arrow-forward"></i>
                                        </button>
                                    </a>
                                </div>
                                <div class="tile">
                                    <div class="tile-header">
                                        <i class="icon ion-md-person-add"></i>
                                        <h3>
                                            <span>Course Materials</span>
                                            <span>Upload Your Materials</span>
                                        </h3>
                                    </div>
                                    <a href="@Url.Action("courseMaterials", "courseMaterials")">
                                        <span>Upload Now</span>
                                        <button class="icon-button">
                                            <i class="icon ion-md-arrow-forward"></i>
                                        </button>
                                    </a>
                                </div>
                                <div class="tile">
                                    <div class="tile-header">
                                        <i class="icon ion-md-person-add"></i>
                                        <h3>
                                            <span>Enroll Students</span>
                                            <span>Add students to courses</span>
                                        </h3>
                                    </div>
                                    <a href="@Url.Action("enrollStudents", "enrollStudents")">
                                        <span>Enroll Now</span>
                                        <button class="icon-button">
                                            <i class="icon ion-md-arrow-forward"></i>
                                        </button>
                                    </a>
                                </div>
                                <div class="tile">
                                    <div class="tile-header">
                                        <i class="icon ion-md-checkmark-circle"></i>
                                        <h3>
                                            <span>Assessment</span>
                                            <span>Assess and grade</span>
                                        </h3>
                                    </div>
                                    <a href="@Url.Action("Assessment", "Assessment")">
                                        <span>Manage Quizzes</span>
                                        <button class="icon-button">
                                            <i class="icon ion-md-arrow-forward"></i>
                                        </button>
                                    </a>
                                </div>
                                <div class="tile">
                                    <div class="tile-header">
                                        <i class="icon ion-md-person"></i>
                                        <h3>
                                            <span>Edit Profile</span>
                                            <span>Update your information</span>
                                        </h3>
                                    </div>
                                    <a href="@Url.Action("editteacherProfile", "editteacherProfile")">
                                        <span>Edit Now</span>
                                        <button class="icon-button">
                                            <i class="icon ion-md-arrow-forward"></i>
                                        </button>
                                    </a>
                                </div>
                            </div>

                        </div>
                    }
                }
                <script src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>





            </div>
            <div class="footer">
                <br /><br />
               
                <div>
                    &copy; 2024 LearnLink. All rights reserved.
                </div>
            </div>
        </div>

</body>
</html>