@model LearnLink.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Dashboard - LearnLink</title>
    <link href="@Url.Content("/Content/dashboard.css")" rel="stylesheet" />
    <link href="@Url.Content("/Content/teacherCourse.css")" rel="stylesheet" />
</head>
<body>
    <div class="responsive-wrapper">
        <div class="app">
            <div class="app-header">
                <div class="logo">
                    <div class="logo-icon">
                        <ion-icon name="school-outline"></ion-icon>
                    </div>
                    <div class="logo-title">
                        <span>LearnLink</span>
                        <span>Teacher Dashboard</span>
                    </div>
                </div>
                <div class="app-header-navigation">
                    <!-- Add any additional navigation items here if needed -->
                </div>
                <div class="app-header-actions">
                    <div class="app-header-actions-buttons">
                        <h1>@HttpContext.Current.Session["UserName"]</h1>
                    </div>
                </div>
                <div class="app-header-mobile">
                    <h1>@HttpContext.Current.Session["UserName"]</h1>
                </div>
            </div>

            <div class="app-body">
                <div class="app-body-navigation">
                    <nav class="navigation">
                        <a href="@Url.Action("teacherCourse", "teacherCourse")">
                            <i class="icon ion-md-book"></i>
                            <span>Manage Courses</span>
                        </a>
                        <a href="@Url.Action("createCourse", "createCourse")">
                            <i class="icon ion-md-add-circle"></i>
                            <span>Create Courses</span>
                        </a>
                        <a href="@Url.Action("enrollStudents", "enrollStudents")">
                            <i class="icon ion-md-person-add"></i>
                            <span>Enroll Students</span>
                        </a>
                        <a href="@Url.Action("reviewAssessments", "reviewAssessments")">
                            <i class="icon ion-md-checkmark-circle"></i>
                            <span>Review Courses</span>
                        </a>
                        <a href="@Url.Action("giveFeedback", "giveFeedback")">
                            <i class="icon ion-md-text"></i>
                            <span>Provide Feedback</span>
                        </a>
                        <a href="@Url.Action("editProfile", "editteacher")">
                            <i class="icon ion-md-person"></i>
                            <span>Edit Profile</span>
                        </a>
                        <a href="@Url.Action("login", "Login")">
                            <i class="icon ion-md-exit"></i>
                            <span>Log Out</span>
                        </a>
                    </nav>
                </div>



                <div class="login-wrapper">
                    <div class="form-box login">
                        <form action="" method="post">
                            <div class="input-box">
                                <input type="text" name="Course Name" required>
                                <label for="Course">Course Name</label>
                            </div>
                            <div class="input-box">
                                <input type="number" name="Course payment" required>
                                <label for="Course">Course Payment</label>
                            </div>


                            <div class="input-box">
                                <br />
                                <input class="input__field" type="file" name="CourseMaterials" multiple />
                                <label for="Course">Course Materials</label>
                            </div>





                            <button type="submit" class="btn" name="login" onclick="showDialog()">Done</button>

                            <button type="button" class="btn btn-back" onclick="window.location.href='/TeacherDashboard/Dashboard'">Back</button>
                        </form>



                        <script>
                            function showDialog() {
                                alert("Course created");
                            }
                        </script>





                    </div>
                </div>

            </div>






            <div class="footer">
                <h1>
                    LearnLink
                    <small>Teacher Dashboard</small>
                </h1>
                <div>
                    &copy; 2024 LearnLink. All rights reserved.
                </div>
            </div>
        </div>
    </div>

    <script src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>

</html>
